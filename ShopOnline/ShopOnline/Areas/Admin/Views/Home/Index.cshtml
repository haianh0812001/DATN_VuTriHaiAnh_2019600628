@{
    ViewData["Title"] = "Trang chủ Admin";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var lsOrders = ViewBag.lsOrders;
}

<div class="row">
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="media align-items-center">
                    <div class="avatar avatar-icon avatar-lg avatar-blue">
                        <i class="anticon anticon-dollar"></i>
                    </div>
                    <div class="m-l-15">
                        <h2 class="m-b-0">@ViewBag.TotalMoney.ToString("#,##0") VNĐ</h2>
                        <p class="m-b-0 text-muted">Tổng tiền đơn hàng</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="media align-items-center">
                    <div class="avatar avatar-icon avatar-lg avatar-cyan">
                        <i class="anticon anticon-dollar"></i>
                    </div>
                    <div class="m-l-15">
                        <h2 class="m-b-0">@ViewBag.MoneyMonth.ToString("#,##0") VNĐ</h2>
                        <p class="m-b-0 text-muted">Tổng tiền trong tháng</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="media align-items-center">
                    <div class="avatar avatar-icon avatar-lg avatar-gold">
                        <i class="anticon anticon-profile"></i>
                    </div>
                    <div class="m-l-15">
                        <h2 class="m-b-0">@ViewBag.Donhang</h2>
                        <p class="m-b-0 text-muted">Số đơn hàng</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="media align-items-center">
                    <div class="avatar avatar-icon avatar-lg avatar-purple">
                        <i class="anticon anticon-user"></i>
                    </div>
                    <div class="m-l-15">
                        <h2 class="m-b-0">@ViewBag.Khachhang</h2>
                        <p class="m-b-0 text-muted">Số khách hàng</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Đơn hàng hot trong tháng</h5>
                    <div>
                        <a asp-controller="AdminOrders" asp-action="Index" class="btn btn-sm btn-default">View All</a>
                    </div>
                </div>
                @if (lsOrders != null)
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Ngày mua</th>
                                    <th>Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lsOrders)
                                {
                                    <tr>
                                        <td>@item.OrderId</td>
                                        <td>@item.OrderDate</td>
                                        <td>@item.TotalMoney.ToString("#,##0") VNĐ</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }                
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h5>Đơn hàng</h5>
                    <div>
                        <a asp-controller="AdminOrders" asp-action="Index" class="btn btn-sm btn-default">View All</a>
                    </div>
                </div>
                <div class="m-t-30">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item p-h-0">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex">
                                    <div>
                                        <h6 class="m-b-0">
                                            <a class="text-dark">Chờ lấy hàng</a>
                                        </h6>
                                    </div>
                                </div>
                                <span class="badge badge-pill badge-cyan font-size-12">
                                    <span class="font-weight-semibold m-l-5">@ViewBag.Cholayhang</span>
                                </span>
                            </div>
                        </li>
                        <li class="list-group-item p-h-0">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex">
                                    <div>
                                        <h6 class="m-b-0">
                                            <a class="text-dark">Chờ xác nhận</a>
                                        </h6>
                                    </div>
                                </div>
                                <span class="badge badge-pill badge-cyan font-size-12">
                                    <span class="font-weight-semibold m-l-5">@ViewBag.Choxacnhan</span>
                                </span>
                            </div>
                        </li>
                        <li class="list-group-item p-h-0">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex">
                                    <div>
                                        <h6 class="m-b-0">
                                            <a class="text-dark">Đang giao</a>
                                        </h6>
                                    </div>
                                </div>
                                <span class="badge badge-pill badge-cyan font-size-12">
                                    <span class="font-weight-semibold m-l-5">@ViewBag.Danggiao</span>
                                </span>
                            </div>
                        </li>
                        <li class="list-group-item p-h-0">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex">
                                    <div>
                                        <h6 class="m-b-0">
                                            <a class="text-dark">Đã giao thành công</a>
                                        </h6>
                                    </div>
                                </div>
                                <span class="badge badge-pill badge-cyan font-size-12">
                                    <span class="font-weight-semibold m-l-5">@ViewBag.Dagiaothanhcong</span>
                                </span>
                            </div>
                        </li>
                        <li class="list-group-item p-h-0">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex">
                                    <div>
                                        <h6 class="m-b-0">
                                            <a class="text-dark">Đơn hàng hủy</a>
                                        </h6>
                                    </div>
                                </div>
                                <span class="badge badge-pill badge-cyan font-size-12">
                                    <span class="font-weight-semibold m-l-5">@ViewBag.Dahuy</span>
                                </span>
                            </div>
                        </li>
                        <li class="list-group-item p-h-0">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex">
                                    <div>
                                        <h6 class="m-b-0">
                                            <a class="text-dark">Trả hàng</a>
                                        </h6>
                                    </div>
                                </div>
                                <span class="badge badge-pill badge-cyan font-size-12">
                                    <span class="font-weight-semibold m-l-5">@ViewBag.Trahang</span>
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
