@model ShopOnline.Models.Slider

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <table class="table table-hover e-commerce-table">
        <thead>
            <tr>
                <th>ID: </th>
                <td>@Model.SliderId</td>
            </tr>
            <tr>
                <th>Tên slider: </th>
                <td>@Model.SliderName</td>
            </tr>
            <tr>
                <th>Backgourd: </th>
                <td><img src="~/images/sliders/@Model.BgImage" width="100px" height="50px" /></td>
            </tr>
            <tr>
                <th>Alias: </th>
                <td>@Model.Alias</td>
            </tr>
            <tr>
                <th>Chi tiết: </th>
                <td>@Model.Contents</td>
            </tr>
        </thead>
    </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SliderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
