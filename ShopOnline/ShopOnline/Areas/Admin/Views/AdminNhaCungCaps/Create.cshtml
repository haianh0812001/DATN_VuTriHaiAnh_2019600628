@model ShopOnline.Models.NhaCungCap

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminNhaCungCaps" asp-action="Index" class="breadcrumb-item">Tạo mới nhà cung cấp</a>
            <span class="breadcrumb-item active">Tạo mới nhà cung cấp</span>
        </nav>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-md-flex m-b-15 align-items-center justify-content-between">
                <div class="m-b-15">
                    <button class="btn btn-primary">
                        <i class="anticon anticon-plus-circle"></i>
                        <span>Tạo mới nhà cung cấp</span>
                    </button>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Nccname" class="control-label"></label>
                <input asp-for="Nccname" class="form-control" />
                <span asp-validation-for="Nccname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
